# Environment variables for production deployment
# Copy this file to .env and update with your actual values

# Domain configuration
DOMAIN=lexpublicus.com
EMAIL=admin@lexpublicus.com

# API Keys (REQUIRED - Update these with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
HUGGING_FACE_USER_ACCESS_TOKEN=your_hugging_face_token_here

# Application configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=20

# Database configuration (if applicable)
DATABASE_URL=sqlite:///data/app.db

# Security settings
SECRET_KEY=your_secret_key_here_generate_a_random_string

# Production settings
ENVIRONMENT=production
DEBUG=false