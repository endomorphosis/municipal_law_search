    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^20.0.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^0.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "typescript": "^5.0.0"
  }
}
